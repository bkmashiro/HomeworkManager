<Page xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  x:Class="HomeworkManager.homework"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeworkManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="homework">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFF7EAB0"/>
                    <GradientStop Color="#FFDADE88" Offset="1"/>
                </LinearGradientBrush>
        </Grid.Background>
            <DockPanel>
                <WrapPanel DockPanel.Dock="Top" x:Name="HomeWorkHolder" HorizontalAlignment="Left" />
                
            </DockPanel>
        <Button Content="+" Margin="0,0,10,10" Width="55" Style="{DynamicResource MaterialDesignFloatingActionDarkButton}" Height="55" FontSize="35" Click="Button_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="0.426,0.521"/>


    </Grid>
    </DockPanel>
</Page>
